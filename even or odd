import java.util.*;
class A 
{
    public static void main(String[] args) 
    {
        Scanner s=new Scanner(System.in);
        System.out.print("Enter a number:");
        int n=s.nextInt();
        if(n%2==0)
        {
            System.out.print("Given num "+n+" is even");
        }
        else
        {
            System.out.print("Given num "+n+" is odd");
        }
    }
}
